{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "technet_luncher",
  "version": "0.1.0",
  "identifier": "com.technet_luncher.app",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "visible": false,
        "width": 1080,
        "height": 620,
        "fullscreen": false,
        "resizable": true,
        "title": "TechNet Game Launcher"
      },
      {
        "label": "splashscreen",
        "visible": true,
        "width": 356,
        "height": 275,
        "decorations": false,
        "url": "../splashscreen.html",
        "alwaysOnTop": true,
        "resizable": false,
        "fullscreen": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
